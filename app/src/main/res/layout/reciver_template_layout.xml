<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingRight="30dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/customer_care" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/profileImage"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/reciver_shape"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:fontFamily="@font/inter"
                android:text="Welcome to Real team! if you have any problem on Real Chat app, please report to us through feedback. Have fun on Real Chat - Video Call."
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/msgClick0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:padding="7dp"
                android:fontFamily="@font/inter"
                android:text="How to be a member?"
                android:textColor="@color/themeColor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/msgClick1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter"
                android:padding="7dp"
                android:text="Cancel subscription"
                android:textColor="@color/themeColor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/msgClick2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter"
                android:padding="7dp"
                android:text="Why am I banned?"
                android:textColor="@color/themeColor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/msgClick3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter"
                android:padding="7dp"
                android:text="Report &amp; Complaints"
                android:textColor="@color/themeColor"
                android:textSize="15dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="1dp"
            android:fontFamily="@font/inter"
            android:paddingLeft="20dp"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:text="07-12-2023"
            android:textSize="12dp" />


    </LinearLayout>


</RelativeLayout>