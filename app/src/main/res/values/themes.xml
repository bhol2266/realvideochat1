<resources>
    <!-- Base application theme. -->
    <style name="Theme.LiveVideoChat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themeColorlight</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/themeColor</item>
        <item name="android:navigationBarColor">@color/themeColor</item>

        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->


    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/themeColor</item>
    </style>


    <style name="roundedImageView" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>


    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">

<!--        <item name="android:datePickerMode">calendar</item>-->
        <item name="colorAccent">@color/themeColor</item>

        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <!-- Customize the OK button -->
        <item name="android:buttonBarButtonStyle">@style/CustomButtonBarButtonStyle</item>

        <!-- Customize the Cancel button -->
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomButtonBarButtonStyle</item>

    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <!-- Set the background color for the header -->
        <item name="android:headerBackground">@color/themeColor</item>
    </style>

    <style name="CustomButtonBarButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <!-- Set text color for the buttons -->
        <item name="android:textColor">@color/themeColor</item>

        <!-- Set background color for the buttons -->

        <!-- Add other button style attributes as needed -->
    </style>



</resources>