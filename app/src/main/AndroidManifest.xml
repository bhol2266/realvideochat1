        android:icon="@mipmap/ic_launcher"
        android:label="Real Live"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.LiveVideoChat"
        tools:targetApi="31">

        <activity
            android:name=".StreamerEarning"
            android:exported="false"
            android:label="@string/title_activity_streamer_earning"
            android:theme="@style/Theme.LiveVideoChat" />
        <activity
            android:name=".AdminPanel_Userlist"
            android:exported="false"
            android:label="@string/title_activity_admin_panel_userlist"
            android:theme="@style/Theme.LiveVideoChat" />
        <activity
            android:name=".ZegoCloudActivity"
            android:exported="false" />
        <activity
            android:name=".Fill_details"
            android:exported="false" />
        <activity
